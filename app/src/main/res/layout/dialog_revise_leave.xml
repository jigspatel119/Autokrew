<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/relativeParentAcceptInviteDialogEvent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"

    >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        card_view:cardBackgroundColor="@android:color/transparent"
        app:cardUseCompatPadding="false"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/info"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"/>


            <com.autokrew.customfonts.CustomFont_GillSansSemiBold
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Revise Leave"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp"/>


            <com.autokrew.customfonts.CustomFont_GillSansSemiBold
                android:id="@+id/msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="@string/msg_revised"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="#f3296636"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:text="Yes, Revise It!"
                    android:textColor="@color/white" />


                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:background="#f3a44e3c"
                    android:layout_marginLeft="5dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:text="Cancel" />

            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>