<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dashboard"
    android:fillViewport="true"
    android:orientation="vertical">


    <TextView
        android:id="@+id/txt_child_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:padding="10dp"
        android:text="My Attendance"
        android:textColor="@color/white"
        android:textSize="16sp" />


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <LinearLayout
            android:id="@+id/ll_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    card_view:cardCornerRadius="@dimen/card_corner_radius"
                    card_view:cardElevation="4"
                    card_view:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Spinner
                            android:id="@+id/edt_month"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/bg_border_primary_transparent"
                            android:padding="5dp"
                            android:paddingLeft="5dp" />


                        <ImageView
                            android:id="@+id/iv_month"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="2dp"
                            android:padding="2dp"
                            app:srcCompat="@drawable/ic_edittext_dropdown" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="0.5"
                    card_view:cardCornerRadius="@dimen/card_corner_radius"
                    card_view:cardElevation="4"
                    card_view:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Spinner
                            android:id="@+id/edt_year"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/bg_border_primary_transparent"
                            android:padding="5dp"
                            android:paddingLeft="5dp" />


                        <ImageView
                            android:id="@+id/iv_year"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="2dp"
                            android:padding="2dp"
                            app:srcCompat="@drawable/ic_edittext_dropdown" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="0.5"
                    app:cardBackgroundColor="@color/colorPrimary"
                    card_view:cardCornerRadius="@dimen/card_corner_radius"
                    card_view:cardElevation="4"
                    card_view:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/img"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:padding="1dp"
                            android:src="@drawable/ic_search_white_18dp" />

                        <TextView
                            android:id="@+id/txt_search"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/img"

                            android:text=" Search"
                            android:textColor="#ffffff" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>
                <!-- <ImageView
                     android:id="@+id/iv_search"
                     android:layout_width="28dp"
                     android:layout_height="28dp"
                     android:layout_gravity="center_vertical"
                     android:padding="2dp"
                     android:src="@drawable/ic_magnifier" />-->


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    card_view:cardCornerRadius="@dimen/card_corner_radius"
                    card_view:cardElevation="4"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/bg_card_color8"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="Attendance Board"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:weightSum="3">

                                <android.support.v7.widget.CardView
                                    android:layout_width="0dp"
                                    android:layout_height="100dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:paddingLeft="@dimen/card_padding"
                                    android:paddingRight="@dimen/card_padding"
                                    app:cardCornerRadius="8dp"
                                    app:cardElevation="5dp"
                                    app:cardUseCompatPadding="true">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/bg_card_working_days"
                                        android:orientation="vertical">

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="55dp"
                                            android:gravity="center">


                                            <TextView
                                                android:id="@+id/txt_workingdays"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerInParent="true"
                                                android:text="0"
                                                android:textColor="@color/white"
                                                android:textSize="24sp"
                                                android:textStyle="bold" />

                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:id="@+id/relativeLayout"
                                            android:layout_width="match_parent"
                                            android:layout_height="24dp"
                                            android:layout_marginTop="1dp"
                                            android:background="@color/bg_trancparent_black"
                                            android:gravity="center">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerInParent="true"
                                                android:text="Working Days"
                                                android:textColor="@color/white"
                                                android:textSize="12sp"

                                                 />

                                        </RelativeLayout>


                                    </LinearLayout>

                                </android.support.v7.widget.CardView>


                                <android.support.v7.widget.CardView
                                    android:layout_width="0dp"
                                    android:layout_height="100dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:paddingLeft="@dimen/card_padding"
                                    android:paddingRight="@dimen/card_padding"
                                    app:cardCornerRadius="8dp"
                                    app:cardElevation="5dp"
                                    app:cardUseCompatPadding="true">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/bg_card_present_days"
                                        android:orientation="vertical">

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="55dp"
                                            android:gravity="center">


                                            <TextView
                                                android:id="@+id/txt_presentdays"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerInParent="true"
                                                android:text="0"
                                                android:textColor="@color/white"
                                                android:textSize="24sp"
                                                android:textStyle="bold" />

                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="24dp"
                                            android:layout_marginTop="1dp"

                                            android:background="@color/bg_trancparent_black"
                                            android:gravity="center">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerInParent="true"
                                                android:text="Present Days"
                                                android:textColor="@color/white"

                                                android:textSize="12sp"
                                               />

                                        </RelativeLayout>


                                    </LinearLayout>

                                </android.support.v7.widget.CardView>


                                <android.support.v7.widget.CardView
                                    android:layout_width="0dp"
                                    android:layout_height="100dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:paddingLeft="@dimen/card_padding"
                                    android:paddingRight="@dimen/card_padding"
                                    app:cardCornerRadius="8dp"
                                    app:cardElevation="5dp"
                                    app:cardUseCompatPadding="true">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/bg_card_absent"
                                        android:orientation="vertical">

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="55dp"
                                            android:gravity="center">


                                            <TextView
                                                android:id="@+id/txt_absent"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerInParent="true"
                                                android:text="0"
                                                android:textColor="@color/white"
                                                android:textSize="24sp"
                                                android:textStyle="bold" />

                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="24dp"
                                            android:layout_marginTop="1dp"

                                            android:background="@color/bg_trancparent_black"
                                            android:gravity="center">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerInParent="true"
                                                android:text="Absent"
                                                android:textSize="12sp"
                                                android:textColor="@color/white" />

                                        </RelativeLayout>


                                    </LinearLayout>

                                </android.support.v7.widget.CardView>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="-10dp"
                                android:weightSum="3">

                                <android.support.v7.widget.CardView
                                    android:layout_width="0dp"
                                    android:layout_height="100dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:paddingLeft="@dimen/card_padding"
                                    android:paddingRight="@dimen/card_padding"
                                    app:cardCornerRadius="8dp"
                                    app:cardElevation="5dp"
                                    app:cardUseCompatPadding="true">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/bg_card_weekoff"
                                        android:orientation="vertical">

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="55dp"
                                            android:gravity="center">


                                            <TextView
                                                android:id="@+id/txt_weekoff"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerInParent="true"
                                                android:text="0"
                                                android:textColor="@color/white"
                                                android:textSize="24sp"
                                                android:textStyle="bold" />

                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="24dp"
                                            android:layout_marginTop="1dp"
                                            android:background="@color/bg_trancparent_black"
                                            android:gravity="center">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerInParent="true"
                                                android:text="WeekOff"
                                                android:textSize="12sp"
                                                android:textColor="@color/white" />

                                        </RelativeLayout>


                                    </LinearLayout>

                                </android.support.v7.widget.CardView>

                                <android.support.v7.widget.CardView
                                    android:layout_width="0dp"
                                    android:layout_height="100dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:paddingLeft="@dimen/card_padding"
                                    android:paddingRight="@dimen/card_padding"
                                    app:cardCornerRadius="8dp"
                                    app:cardElevation="5dp"
                                    app:cardUseCompatPadding="true">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/bg_card_halfday"
                                        android:orientation="vertical">

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="55dp"
                                            android:gravity="center">


                                            <TextView
                                                android:id="@+id/txt_halfdays"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerInParent="true"
                                                android:text="0"
                                                android:textColor="@color/white"
                                                android:textSize="24sp"
                                                android:textStyle="bold" />

                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="24dp"
                                            android:layout_marginTop="1dp"
                                            android:background="@color/bg_trancparent_black"
                                            android:gravity="center">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerInParent="true"
                                                android:text="Half Days"
                                                android:textSize="12sp"
                                                android:textColor="@color/white" />

                                        </RelativeLayout>


                                    </LinearLayout>

                                </android.support.v7.widget.CardView>


                                <android.support.v7.widget.CardView
                                    android:layout_width="0dp"
                                    android:layout_height="100dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:paddingLeft="@dimen/card_padding"
                                    android:paddingRight="@dimen/card_padding"
                                    app:cardCornerRadius="8dp"
                                    app:cardElevation="5dp"
                                    app:cardUseCompatPadding="true">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/bg_card_leave"
                                        android:orientation="vertical">

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="55dp"
                                            android:gravity="center">


                                            <TextView
                                                android:id="@+id/txt_leave"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerInParent="true"
                                                android:text="0"
                                                android:textColor="@color/white"
                                                android:textSize="24sp"
                                                android:textStyle="bold" />

                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="24dp"
                                            android:layout_marginTop="1dp"
                                            android:background="@color/bg_trancparent_black"
                                            android:gravity="center">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerInParent="true"
                                                android:text="Leave"
                                                android:textSize="12sp"
                                                android:textColor="@color/white" />

                                        </RelativeLayout>


                                    </LinearLayout>

                                </android.support.v7.widget.CardView>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="-10dp"
                                android:weightSum="3">

                                <android.support.v7.widget.CardView
                                    android:layout_width="0dp"
                                    android:layout_height="100dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:paddingLeft="@dimen/card_padding"
                                    android:paddingRight="@dimen/card_padding"
                                    app:cardCornerRadius="8dp"
                                    app:cardElevation="5dp"
                                    app:cardUseCompatPadding="true">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/bg_card_punch_early"
                                        android:orientation="vertical">

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="55dp"
                                            android:gravity="center">


                                            <TextView
                                                android:id="@+id/txt_punchlate"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerInParent="true"
                                                android:text="0"
                                                android:textColor="@color/white"
                                                android:textSize="24sp"
                                                android:textStyle="bold" />

                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="24dp"
                                            android:layout_marginTop="1dp"
                                            android:background="@color/bg_trancparent_black"
                                            android:gravity="center">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerInParent="true"
                                                android:text="Punch Late"
                                                android:textSize="12sp"
                                                android:textColor="@color/white" />

                                        </RelativeLayout>


                                    </LinearLayout>

                                </android.support.v7.widget.CardView>


                                <android.support.v7.widget.CardView
                                    android:layout_width="0dp"
                                    android:layout_height="100dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:paddingLeft="@dimen/card_padding_left_right"
                                    android:paddingRight="@dimen/card_padding_left_right"
                                    app:cardCornerRadius="8dp"
                                    app:cardElevation="5dp"
                                    app:cardUseCompatPadding="true">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/bg_card_punch_early"
                                        android:orientation="vertical">

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="55dp"
                                            android:gravity="center">


                                            <TextView
                                                android:id="@+id/txt_punchearly"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerInParent="true"
                                                android:text="0"
                                                android:textColor="@color/white"
                                                android:textSize="24sp"
                                                android:textStyle="bold" />

                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="24dp"
                                            android:layout_marginTop="1dp"
                                            android:background="@color/bg_trancparent_black"
                                            android:gravity="center">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerInParent="true"
                                                android:text="Punch Early"
                                                android:textSize="12sp"
                                                android:textColor="@color/white" />

                                        </RelativeLayout>


                                    </LinearLayout>

                                </android.support.v7.widget.CardView>


                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>

                </android.support.v7.widget.CardView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp"
                    app:cardUseCompatPadding="false"
                    card_view:cardBackgroundColor="@android:color/transparent">

                    <ImageView
                        android:id="@+id/no_data_found"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:src="@drawable/no_data_found"
                        android:visibility="visible" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_data_attendance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior" />


            </LinearLayout>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</LinearLayout>

