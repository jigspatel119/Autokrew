<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_empty="true">
        <layer-list>
            <item
                android:left="12dp"
                android:right="12dp"
                android:top="12dp"
                android:bottom="12dp"
                android:drawable="@drawable/ic_keyboard_arrow_down_white_24dp">
            </item>
        </layer-list>
    </item>

    <item android:state_expanded="true">
        <layer-list>
            <item
                android:left="12dp"
                android:right="12dp"
                android:top="12dp"
                android:bottom="12dp"
                android:drawable="@drawable/ic_keyboard_arrow_up_white_24dp">
            </item>
        </layer-list>
    </item>
</selector>